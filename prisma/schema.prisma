// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  trades        Trade[]
  dailyGoals    DailyGoal[]
  weeklyFocus   WeeklyFocus[]
  voiceNotes    VoiceNote[]
  screenshots   Screenshot[]
  
  strategies    Strategy[]    @relation("UserStrategies")
  journalEntries JournalEntry[] @relation("UserJournal")
  
  // Advanced Analytics Relations
  skillProgress     SkillProgress?     @relation("UserSkillProgress")
  achievements      Achievement[]      @relation("UserAchievements")
  marketConditionAnalysis MarketConditionAnalysis[] @relation("UserMarketAnalysis")
  sessionPerformance SessionPerformance[] @relation("UserSessionPerformance")
  tradeDurationAnalysis TradeDurationAnalysis[] @relation("UserTradeDurationAnalysis")
  tradingPlaybook   TradingPlaybook?   @relation("UserTradingPlaybook")
  dataExports       DataExport[]       @relation("UserDataExports")
}

model Trade {
  id                  String     @id @default(cuid())
  userId              String
  user                User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Strategy & Setup References
  strategyId          String?
  strategy            Strategy?  @relation("StrategyTrades", fields: [strategyId], references: [id], onDelete: SetNull)
  entryModelId        String?
  entryModel          EntryModel? @relation("EntryModelTrades", fields: [entryModelId], references: [id], onDelete: SetNull)
  timeframeSequenceId String?
  timeframeSequence   TimeframeSequence? @relation("SequenceTrades", fields: [timeframeSequenceId], references: [id], onDelete: SetNull)
  
  // Core Trade Details
  pair                String     // Currency pair (EUR/USD, GBP/USD, etc.)
  direction           String     // LONG or SHORT
  entryPrice          Float
  exitPrice           Float?
  entryTime           DateTime
  exitTime            DateTime?
  
  // Position Management
  volume              Float      // Lot size or quantity
  stopLoss            Float?
  takeProfit          Float?
  riskAmount          Float?     // Amount risked in currency
  riskPercent         Float?     // Risk as % of account
  riskRewardRatio     Float?
  
  // Account & Broker Info
  account             String?    // Personal, PropFirm account name, etc.
  broker              String?    // Broker name
  accountBalance      Float?     // Balance at time of trade
  accountEquity       Float?     // Equity at time of trade
  
  // Outcomes & P&L
  profitLoss          Float?     // Manual P&L or calculated
  profitLossPercent   Float?     // P&L as percentage
  outcome             String?    // WIN, LOSS, BREAKEVEN, OPEN
  status              String     @default("open") // open, closed, cancelled
  
  // Trading Context
  session             String?    // Trading session (asia, london, ny, etc.)
  marketCondition     String?    // Trend/range/choppy/etc.
  
  // Advanced Context Analysis
  marketConditionTags String?    // JSON array: ["trending", "high_volatility", "news_influenced"]
  sessionOverlap      String?    // "london_open", "ny_open", "london_ny_overlap"
  durationMinutes     Int?       // Calculated trade duration in minutes
  
  // Decision Quality & Edge Detection
  decisionScore       Int?       // 0-100 score based on rule adherence, timing, emotions
  decisionQuality     String?    // "good_win", "good_loss", "bad_win", "bad_loss"
  
  // Psychological Depth
  emotionalDrift      String?    // JSON: {before: "calm", during: "anxious", after: "frustrated"}
  triggers            String?    // JSON array: ["after_loss", "fomo", "boredom"]
  emotionalCost       Float?     // Estimated RR lost due to emotional interference
  
  // What-If Analysis
  counterfactualScenarios String? // JSON: alternative outcomes and simulations
  passiveOutcome      Float?     // What if SL/TP were never touched
  alternativeEntries  String?    // JSON: "if_entered_at_poi_instead"
  
  // Advanced Tagging
  tags                String?    // JSON array: ["fomo", "late_entry", "perfect_execution"]
  
  // Reflective Fields
  notes               String?    // Trade notes/observations
  emotionalState      String?    // calm, rushed, frustrated, confident, focused, etc.
  setupQuality        Int?       // 1-5 star rating
  whatLearned         String?    // Lessons learned from this trade
  mistakes            String?    // JSON array of mistakes made
  
  // Lifecycle & Updates
  tradeState          TradeState?
  updates             TradeUpdate[] @relation("TradeUpdates")
  reflection          TradeReflection?
  ruleViolations      RuleViolation[] @relation("TradeRuleViolations")
  
  // Media & Documentation
  screenshots         Screenshot[]
  voiceNotes          VoiceNote[]
  
  // Timestamps
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  
  @@index([userId])
  @@index([strategyId])
  @@index([entryModelId])
  @@index([pair])
  @@index([entryTime])
  @@index([outcome])
  @@index([status])
  @@index([account])
  @@index([decisionQuality])
  @@index([sessionOverlap])
}

model Screenshot {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tradeId   String?
  trade     Trade?   @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  
  url       String   // Cloud storage URL or base64
  caption   String?
  uploadedAt DateTime @default(now())
  
  @@index([userId])
  @@index([tradeId])
}

model VoiceNote {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tradeId   String?
  trade     Trade?   @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  
  url       String   // Cloud storage URL or base64
  duration  Int      // Duration in seconds
  transcript String? // AI transcription if available
  recordedAt DateTime @default(now())
  
  @@index([userId])
  @@index([tradeId])
}

model DailyGoal {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date      DateTime
  goals     String?   // JSON array of daily trading goals
  notes     String?
  completed Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, date])
  @@index([userId])
}

model AIInsight {
  id        String   @id @default(cuid())
  userId    String?
  
  type      String   // "weekly_summary", "monthly_summary", "pattern_detection", "improvement_tips"
  content   String   // JSON string with insight data
  period    String   // "week", "month", "custom"
  startDate DateTime
  endDate   DateTime
  
  createdAt DateTime @default(now())
  
  @@index([userId])
}

// ============ STRATEGY SYSTEM ============
model Strategy {
  id                String     @id @default(cuid())
  userId            String
  user              User       @relation("UserStrategies", fields: [userId], references: [id], onDelete: Cascade)

  name              String
  description       String?
  marketType        String     // "trend" | "range" | "mixed"
  preferredSessions String?    // JSON array: ["asian", "london", "ny"]
  riskPhilosophy    String?    // Risk philosophy description
  status            String     @default("active") // "active" | "paused" | "archived"

  // Strategy Versioning & Experimentation
  version           String     @default("1.0")
  parentVersionId   String?    // For tracking strategy evolution
  parentVersion     Strategy?  @relation("StrategyVersions", fields: [parentVersionId], references: [id])
  childVersions     Strategy[] @relation("StrategyVersions")

  abTestGroup       String?    // "A", "B", or null for no testing
  abTestName        String?    // Name of the A/B test

  // Edge Detection & Performance
  edgeConfidenceScore Float?   // 0-100 based on execution quality vs outcomes
  perfectExecutionCount Int    @default(0)
  mistakeCount       Int       @default(0)
  successDespiteMistakeCount Int @default(0)

  // Strategy Cooldown & Pause Rules
  cooldownRules      String?    // JSON: {afterLosses: 3, pauseHours: 24}
  pauseUntil         DateTime?  // When strategy can be used again

  entryModels       EntryModel[]
  timeframeSequences TimeframeSequence[]
  trades            Trade[]    @relation("StrategyTrades")
  rules             StrategyRule[]

  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([userId])
  @@index([status])
  @@index([abTestGroup])
}

// ============ ENTRY MODELS ============
model EntryModel {
  id                String     @id @default(cuid())
  strategyId        String
  strategy          Strategy   @relation(fields: [strategyId], references: [id], onDelete: Cascade)
  
  name              String
  entryLogic        String?    // Description of entry logic
  confirmationStyle String?    // How entry is confirmed
  riskStyle         String     // "aggressive" | "balanced" | "conservative"
  notes             String?
  
  trades            Trade[]    @relation("EntryModelTrades")
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  @@index([strategyId])
}

// ============ MULTI-TIMEFRAME SEQUENCE ENGINE ============
model TimeframeSequence {
  id                String     @id @default(cuid())
  strategyId        String
  strategy          Strategy   @relation(fields: [strategyId], references: [id], onDelete: Cascade)
  
  name              String     // e.g., "Weekly-Daily-H4-H1-M15"
  description       String?
  
  steps             TimeframeStep[]
  trades            Trade[]    @relation("SequenceTrades")
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  @@index([strategyId])
}

model TimeframeStep {
  id                String     @id @default(cuid())
  sequenceId        String
  sequence          TimeframeSequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  
  orderIndex        Int        // Order in sequence (1, 2, 3...)
  timeframe         String     // "W1" | "D1" | "H4" | "H1" | "M15" | "M5" | "M1"
  role              String     // "HTF Bias" | "Structure" | "POI" | "Confirmation" | "Entry" | "Execution"
  description       String?
  
  @@unique([sequenceId, orderIndex])
  @@index([sequenceId])
}

// ============ EXTENDED TRADE LIFECYCLE ============
// Extend Trade model with references to strategy, entry model, and sequence
// (See Trade model updates below)

model TradeState {
  id                String     @id @default(cuid())
  tradeId           String     @unique
  trade             Trade      @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  
  state             String     @default("planned") // "planned" | "active" | "closed" | "backtested" | "hypothetical"
  
  // Pre-trade checklist
  htfBiasAligned    Boolean    @default(false)
  poiIdentified     Boolean    @default(false)
  entryRulesMet     Boolean    @default(false)
  sessionRespected  Boolean    @default(false)
  riskRuleRespected Boolean    @default(false)
  noEmotionalPressure Boolean  @default(false)
  
  checklist         String?    // JSON array of all checklist items
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  @@index([tradeId])
}

// ============ ACTIVE TRADE UPDATE SYSTEM ============
model TradeUpdate {
  id                String     @id @default(cuid())
  tradeId           String
  trade             Trade      @relation("TradeUpdates", fields: [tradeId], references: [id], onDelete: Cascade)
  
  timestamp         DateTime   @default(now())
  
  // Action taken
  action            String     // "none" | "sl_moved" | "tp_adjusted" | "partial_close" | "manual_close"
  reason            String?    // "followed_plan" | "market_structure" | "emotional" | "fear" | "greed" | "uncertainty" | "distraction"
  
  // Emotional state at update
  emotionalState    String?    // "calm" | "confident" | "anxious" | "hesitant" | "overconfident" | "fearful" | "impulsive" | "detached"
  
  // In-trade behavior flags
  behavior          String?    // JSON array of behavior checkboxes
  
  notes             String?
  
  @@index([tradeId])
  @@index([timestamp])
}

// ============ POST-TRADE REFLECTION ============
model TradeReflection {
  id                String     @id @default(cuid())
  tradeId           String     @unique
  trade             Trade      @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  
  // Execution quality
  followedPlan      String?    // "yes" | "mostly" | "no"
  rulesRespected    String?    // "yes" | "partially" | "no"
  
  // Emotional summary
  emotionalSummary  String?    // JSON array of emotional flags
  
  // Behavioral outcomes
  behavioralOutcomes String?   // JSON array of behavior outcomes
  
  // Self-assessment
  whatWentRight     String?
  whatWentWrong     String?
  lessonLearned     String?
  ruleToReinforce   String?
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  @@index([tradeId])
}

// ============ RULE & DISCIPLINE ENGINE ============
model StrategyRule {
  id                String     @id @default(cuid())
  strategyId        String
  strategy          Strategy   @relation(fields: [strategyId], references: [id], onDelete: Cascade)
  
  ruleName          String
  description       String?
  isMandatory       Boolean    @default(true)
  weight            Int        @default(1) // Importance weight
  
  ruleViolations    RuleViolation[]
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  @@index([strategyId])
}

model RuleViolation {
  id                String     @id @default(cuid())
  tradeId           String
  trade             Trade      @relation("TradeRuleViolations", fields: [tradeId], references: [id], onDelete: Cascade)
  ruleId            String
  rule              StrategyRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  
  violated          Boolean    @default(true)
  reason            String?    // "emotional" | "technical" | "oversight"
  impact            Float?     // Estimated impact on P&L
  
  createdAt         DateTime   @default(now())
  
  @@index([tradeId])
  @@index([ruleId])
}

// ============ JOURNAL & TRADING PHASES ============
model JournalEntry {
  id                String     @id @default(cuid())
  userId            String
  user              User       @relation("UserJournal", fields: [userId], references: [id], onDelete: Cascade)
  
  date              DateTime
  
  // Mental state
  mentalState       String?    // Free text
  focus             String?    // Low, Medium, High
  confidence        Int?       // 1-10 scale
  externalStressors String?    // JSON array
  
  // Trading phase
  phase             String?    // "learning" | "discipline" | "consistency" | "optimization"
  phaseNotes        String?
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  @@unique([userId, date])
  @@index([userId])
}

// ============ TIME-BASED ANALYSIS SUMMARIES ============
model PeriodSummary {
  id                String     @id @default(cuid())
  userId            String

  period            String     // "daily" | "weekly" | "monthly" | "quarterly" | "half_year" | "yearly"
  startDate         DateTime
  endDate           DateTime

  // Summary metrics
  totalTrades       Int
  winCount          Int
  lossCount         Int
  winRate           Float
  expectancy        Float

  // Strategy performance
  bestStrategy      String?
  worstStrategy     String?
  bestEntryModel    String?

  // Behavioral insights
  emotionalPatterns String? // JSON
  behavioralTrends  String? // JSON
  improvementsNeeded String? // JSON array

  content           String? // Full summary (for AI or template-based)

  createdAt         DateTime   @default(now())

  @@unique([userId, period, startDate])
  @@index([userId])
  @@index([startDate])
}

// ============ SKILL PROGRESS & MOTIVATION SYSTEM ============
model SkillProgress {
  id                String     @id @default(cuid())
  userId            String     @unique
  user              User       @relation("UserSkillProgress", fields: [userId], references: [id], onDelete: Cascade)

  // Core Trading Skills (0-100 scores)
  ruleAdherence     Float      @default(0)
  emotionalStability Float     @default(0)
  consistency       Float      @default(0)
  patience          Float      @default(0)
  riskDiscipline    Float      @default(0)
  decisionQuality   Float      @default(0)

  // Skill History (JSON array of {date, skill, score} for trend tracking)
  skillHistory      String?

  // Current Focus Areas
  focusAreas        String?    // JSON array of current improvement targets

  updatedAt         DateTime   @updatedAt
}

model Achievement {
  id                String     @id @default(cuid())
  userId            String
  user              User       @relation("UserAchievements", fields: [userId], references: [id], onDelete: Cascade)

  type              String     // "streak", "milestone", "improvement", "consistency"
  title             String
  description       String
  icon              String?    // Icon identifier
  unlockedAt        DateTime   @default(now())

  // Achievement Criteria
  criteria          String?    // JSON: what was required to unlock
  value             Int?       // Numeric value (e.g., 50 for 50 disciplined trades)

  @@index([userId])
  @@index([type])
}

model WeeklyFocus {
  id                String     @id @default(cuid())
  userId            String
  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  weekStart         DateTime
  focusArea         String     // e.g., "patience", "discipline", "risk management"
  specificGoal      String?    // More detailed goal
  progressNotes     String?    // Weekly progress notes
  completed         Boolean    @default(false)

  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@unique([userId, weekStart])
  @@index([userId])
}

// ============ ADVANCED ANALYTICS & INSIGHTS ============
model MarketConditionAnalysis {
  id                String     @id @default(cuid())
  userId            String
  user              User       @relation("UserMarketAnalysis", fields: [userId], references: [id], onDelete: Cascade)

  condition         String     // "trending", "ranging", "high_volatility", etc.
  period            String     // "week", "month", "quarter"

  // Performance metrics
  totalTrades       Int
  winRate           Float
  avgProfitLoss     Float
  bestStrategy      String?

  // Behavioral patterns
  emotionalPatterns String?    // JSON
  commonTriggers    String?    // JSON array

  startDate         DateTime
  endDate           DateTime

  @@unique([userId, condition, period, startDate])
  @@index([userId])
}

model SessionPerformance {
  id                String     @id @default(cuid())
  userId            String
  user              User       @relation("UserSessionPerformance", fields: [userId], references: [id], onDelete: Cascade)

  session           String     // "london_open", "ny_open", "london_ny_overlap"
  period            String     // "week", "month", "quarter"

  // Performance metrics
  totalTrades       Int
  winRate           Float
  avgProfitLoss     Float
  overtradingIncidents Int     @default(0)

  // Behavioral insights
  emotionalStability Float?    // 0-100 score
  disciplineScore    Float?    // 0-100 score

  startDate         DateTime
  endDate           DateTime

  @@unique([userId, session, period, startDate])
  @@index([userId])
}

model TradeDurationAnalysis {
  id                String     @id @default(cuid())
  userId            String
  user              User       @relation("UserTradeDurationAnalysis", fields: [userId], references: [id], onDelete: Cascade)

  durationRange     String     // "0-15min", "15-60min", "1-4h", "4h+"
  outcome           String     // "win", "loss", "breakeven"

  // Statistics
  count             Int
  avgProfitLoss     Float
  winRate           Float?

  // Strategy performance by duration
  bestStrategy      String?
  commonMistakes    String?    // JSON array

  period            String     // "month", "quarter", "year"
  startDate         DateTime
  endDate           DateTime

  @@unique([userId, durationRange, outcome, period, startDate])
  @@index([userId])
}

// ============ PERSONAL TRADING PLAYBOOK ============
model TradingPlaybook {
  id                String     @id @default(cuid())
  userId            String     @unique
  user              User       @relation("UserTradingPlaybook", fields: [userId], references: [id], onDelete: Cascade)

  // Core Rules & Principles
  goldenRules        String?    // JSON array of user's most important rules
  redFlags          String?    // JSON array of warning signs
  bestStrategies    String?    // JSON array of top performing strategies
  optimalConditions String?    // JSON: best market conditions, sessions, etc.

  // Behavioral Guidelines
  emotionalTriggers String?    // JSON: personal triggers and coping strategies
  decisionFramework String?    // JSON: step-by-step decision making process

  // Performance Benchmarks
  targetWinRate     Float?
  targetExpectancy  Float?
  maxDrawdownLimit  Float?

  // Identity & Mindset
  tradingIdentity   String?    // "Patient systematic trader", "High-probability specialist", etc.
  growthTrajectory  String?    // Current phase and next milestones

  lastUpdated       DateTime   @updatedAt
  version           Int        @default(1)
}

// ============ EXPORT & BACKUP SYSTEM ============
model DataExport {
  id                String     @id @default(cuid())
  userId            String
  user              User       @relation("UserDataExports", fields: [userId], references: [id], onDelete: Cascade)

  type              String     // "trades", "strategies", "journal", "full_backup"
  format            String     // "json", "csv", "pdf"

  // Export content
  data              String     // JSON string of exported data
  filename          String

  // Metadata
  recordCount       Int
  dateRange         String?    // JSON: {startDate, endDate}

  createdAt         DateTime   @default(now())

  @@index([userId])
  @@index([type])
}
